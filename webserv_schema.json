{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"title": "webserv schema",
	"description": "webserv is a C++ project at Codam",
	"type": "object",
	"additionalProperties": false,
	"required": [
		"connection_queue_length",
		"client_max_body_size",
		"servers"
	],
	"properties": {
		"connection_queue_length": {
			"type": "integer",
			"minimum": 1
		},
		"client_max_body_size": {
			"type": "integer",
			"minimum": 0
		},
		"servers": {
			"type": "array",
			"items": {
				"type": "object",
				"additionalProperties": false,
				"required": [
					"listen",
					"server_names",
					"locations",
					"error_pages"
				],
				"properties": {
					"listen": {
						"type": "array",
						"items": {
							"type": "string"
						}
					},
					"server_names": {
						"type": "array",
						"items": {
							"type": "string"
						}
					},
					"locations": {
						"type": "object",
						"additionalProperties": {
							"type": "object",
							"additionalProperties": false,
							"properties": {
								"cgi_settings": {
									"type": "object",
									"additionalProperties": false,
									"required": [
										"cgi_execve_path"
									],
									"properties": {
										"cgi_execve_path": {
											"type": "string"
										},
										"cgi_execve_argv0": {
											"type": "string"
										}
									}
								},
								"get_allowed": {
									"type": "boolean"
								},
								"post_allowed": {
									"type": "boolean"
								},
								"delete_allowed": {
									"type": "boolean"
								},
								"autoindex": {
									"type": "boolean"
								},
								"index": {
									"type": "string"
								},
								"redirect": {
									"type": "string"
								},
								"root": {
									"type": "string"
								}
							},
							"oneOf": [
								{
									"required": [
										"root"
									]
								},
								{
									"required": [
										"redirect"
									]
								}
							],
							"not": {
								"oneOf": [
									{
										"required": [
											"redirect"
										],
										"oneOf": [
											{
												"required": [
													"cgi_settings"
												]
											},
											{
												"required": [
													"get_allowed"
												]
											},
											{
												"required": [
													"post_allowed"
												]
											},
											{
												"required": [
													"delete_allowed"
												]
											},
											{
												"required": [
													"autoindex"
												]
											},
											{
												"required": [
													"index"
												]
											},
											{
												"required": [
													"root"
												]
											}
										]
									},
									{
										"required": [
											"autoindex",
											"index"
										]
									}
								]
							}
						}
					}
				},
				"error_pages": {
					"type": "object",
					"additionalProperties": {
						"type": "string"
					}
				}
			}
		}
	}
}
}
